<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog da Unicesumar - Lista de Categorias</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Usuários cadastrados</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nome</th>
                    <th>E-mail</th>
                    <th>Tipo de acesso</th>
                    <th>Data de Cadastro</th>
                    <th>Status</th>
                    <th>Excluir</th>
                    <th>Editar</th>
                </tr>
            </thead>
            <tbody>
                <% if (users.length > 0) { %>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td><%= user.descricao %></td>
                            <td><%= user.formatted_date %></td>
                            <td><%= user.ativo === 0 ? 'Inativo' : 'Ativo' %></td>
                            <td>
                                <form action="/users/<%= user.id %>/delete" method="POST">
                                    <button type="submit">Excluir</button>
                                </form>
                            </td>
                            <td><a href="">Editar</a></td>
                        </tr>
                    <% }) %>

                <%} else {%>
                <tr>
                    <td colspan="4">Nenhum usuário cadastrado.</td>
                </tr>
                <% } %>
            </tbody>
        </table>
        <a href="/users/add" class="btn btn-primary mt-3">Cadastrar novo usuário</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>